<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <include layout="@layout/top"></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.15"
            android:background="@color/txt_color"></View>
    </LinearLayout>
    <ScrollView
        android:id="@+id/lv_root"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/margin"
                android:text="工业项目一定要喝酒吗？"
                android:textColor="@color/black"
                android:textSize="@dimen/big"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/padding"
                    android:text="来自专栏"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/small" />

                <TextView
                    android:id="@+id/txt_column_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/margin"
                    android:text="阿柴有话说"
                    android:textColor="@color/login"
                    android:textSize="@dimen/normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/padding">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="@dimen/head"
                    android:layout_height="@dimen/head"
                    android:src="@drawable/head" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/padding"
                    android:text="刘建设的建设"
                    android:textColor="@color/login"
                    android:textSize="@dimen/normal" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding"
                    android:background="@color/txt_color"></View>

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/padding"
                    android:text="2017-09-15"
                    android:textColor="@color/txt_color"
                    android:textSize="@dimen/small" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:layout_marginBottom="@dimen/padding"
                android:background="#e5e5e5"
                android:lineSpacingMultiplier="1.2"
                android:padding="@dimen/padding"
                android:text="hello,我是董大哥，唔咻咻咻！hello,我是董大哥，唔咻咻咻！"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal"
                android:typeface="sans" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/post_height"
                android:layout_marginBottom="@dimen/padding"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding"
                android:scaleType="centerCrop"
                android:src="@drawable/demo"
                android:visibility="gone" />

            <WebView
                android:id="@+id/editor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/margin"
                android:layout_marginTop="@dimen/padding"
                android:alpha="0.15"
                android:background="@color/txt_color"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/margin"
                android:paddingTop="@dimen/padding"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_answerNum"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="评论30"
                    android:onClick="onClick"
                    android:textColor="@color/login"
                    android:textSize="@dimen/small"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/txt_save"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"
                    android:gravity="center_vertical"
                    android:text="收藏"
                    android:onClick="onClick"
                    android:textColor="@color/login"
                    android:textSize="@dimen/small"
                    android:typeface="sans" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center|right"
                    android:paddingTop="@dimen/padding">

                    <TextView
                        android:id="@+id/txt_agree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_div_grey"
                        android:drawableLeft="@drawable/slector_btn_like"
                        android:drawablePadding="@dimen/padding"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding"
                        android:paddingRight="@dimen/padding"
                        android:text="25 "
                        android:onClick="onClick"
                        android:textColor="@color/txt_color"
                        android:textSize="@dimen/small"
                        android:typeface="sans"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:orientation="vertical"
                android:background="@color/grey">
                <com.njjd.utils.ListViewForScrollView
                    android:id="@+id/list_comment"
                    android:dividerHeight="0dp"
                    android:divider="#00000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.njjd.utils.ListViewForScrollView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:alpha="0.15"
                android:background="@color/txt_color"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:text="相关推荐"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/normal"
                android:typeface="sans" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:alpha="0.15"
                android:background="@color/txt_color"></View>

            <com.njjd.utils.ListViewForScrollView
                android:id="@+id/list_article"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.njjd.utils.ListViewForScrollView>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        android:clickable="true"
        android:onClick="onClick">
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_up_comment"></include>
        <include layout="@layout/layout_share"></include>
    </LinearLayout>
</RelativeLayout>