<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.15"
        android:background="#000000"></View>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radio1"
            android:orientation="horizontal"
            android:padding="@dimen/padding"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_btn_index"
                android:gravity="center"
                android:onClick="onClick"
                android:drawablePadding="2dp"
                android:text="社区"
                android:textColor="@drawable/selector_btn_index"
                android:textSize="@dimen/mini"
                android:typeface="sans" />
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_btn_find"
                android:gravity="center"
                android:onClick="onClick"
                android:drawablePadding="2dp"
                android:text="专栏"
                android:textColor="@drawable/selector_btn_find"
                android:textSize="@dimen/mini"
                android:typeface="sans" />
            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:layout_gravity="center_vertical"
                android:onClick="onClick"
                android:drawablePadding="2dp"
                android:textColor="#898989"
                android:background="@null"
                android:text="提问"
                android:typeface="sans"
                android:textSize="@dimen/mini"
                android:gravity="center|bottom"/>
            <com.njjd.utils.TipButton
                android:id="@+id/radio4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/selector_btn_message"
                android:gravity="center"
                android:onClick="onClick"
                android:drawablePadding="2dp"
                android:text="消息"
                android:textColor="@drawable/selector_btn_message"
                android:textSize="@dimen/mini"
                android:typeface="sans" />

            <RadioButton
                android:id="@+id/radio5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@null"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/selector_btn_me"
                android:gravity="center"
                android:onClick="onClick"
                android:text="我的"
                android:textColor="@drawable/selector_btn_me"
                android:textSize="@dimen/mini"
                android:typeface="sans" />
        </RadioGroup>
</RelativeLayout>