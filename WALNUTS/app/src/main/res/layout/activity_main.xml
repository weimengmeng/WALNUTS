<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Width_m_Height_m"
    android:id="@+id/main"
    >
    <LinearLayout
        style="@style/Width_m_Height_m"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <fragment
            android:id="@+id/index_fragment"
            android:name="com.njjd.fragment.IndexFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/find_fragment"
            android:name="com.njjd.fragment.ColumnFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/pub_fragment"
            android:name="com.njjd.fragment.PubFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/mess_fragment"
            android:name="com.njjd.fragment.MessageFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <fragment
            android:id="@+id/my_fragment"
            android:name="com.njjd.fragment.MineFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="mine" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/bottom"></include>
    </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_pub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/btn_qu"/>
</RelativeLayout>
