<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/column_w"
    android:layout_height="@dimen/column"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/padding"
    android:layout_marginLeft="@dimen/margin"
    android:layout_marginRight="@dimen/margin"
    android:background="@drawable/background_layout_div_radius"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/column">
        <com.njjd.utils.CustomImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            app:radius="4dp"
            android:layout_height="@dimen/column"
            android:src="@drawable/demo"/>
        <com.njjd.utils.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/column"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:radius="4dp"
            android:src="@drawable/shadow"/>
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin"
            android:textStyle="bold"
            android:text=""
            android:visibility="gone"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/big" />
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_below="@id/txt_title"
            android:padding="@dimen/margin"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/padding_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/margin">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_head"
                android:layout_width="20dp"
                android:visibility="gone"
                android:layout_height="20dp"
                android:src="@drawable/head" />
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="核桃小编"
                android:textColor="@color/white"
                android:textSize="@dimen/mini" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • "
                android:textColor="@color/white"
                android:textSize="@dimen/mini" />
            <TextView
                android:id="@+id/txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="核桃小编"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/mini" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>