<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_topsale"
            android:layout_width="match_parent"
            android:text="精选专栏"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/sel_column"
            android:drawablePadding="@dimen/margin"
            android:paddingTop="@dimen/margin_small"
            android:paddingLeft="@dimen/margin"
            android:background="@color/white"
            android:textSize="@dimen/small"
            android:textColor="@color/txt_color"
            android:layout_height="wrap_content"/>
        <com.njjd.utils.BetterRecyclerView
            android:id="@+id/rec_column"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.njjd.utils.BetterRecyclerView>
    <TextView
        android:id="@+id/txt_live"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_small"
        android:paddingLeft="@dimen/margin"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/margin"
        android:textSize="@dimen/small"
        android:drawableLeft="@drawable/live"
        android:textColor="@color/txt_color"
        android:text="Live直播"/>
    <com.youth.banner.Banner
        android:layout_marginTop="@dimen/margin_small"
        android:id="@+id/banner"
        android:background="@drawable/background_layout_div_radius"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_height="@dimen/head_large" />
</LinearLayout>