<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/grey"
    android:weightSum="1"
    android:orientation="vertical"
    style="@style/Width_m_Height_m">
    <LinearLayout
        android:id="@+id/top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/top"></include>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="1dp"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/padding_top"
            android:paddingBottom="@dimen/padding_top"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_head"
                android:layout_marginLeft="@dimen/margin"
                android:layout_width="@dimen/margin_top"
                android:layout_height="@dimen/margin_top"
                android:src="@drawable/head"
                app:civ_border_width="5dp"
                app:civ_border_color="#ebebeb" />
            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:text="ddf"
                android:layout_marginLeft="@dimen/padding"
                android:gravity="center_vertical"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/img_sex"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_boy"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_focus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:lineSpacingMultiplier="1.1"
                android:text=""
                android:textColor="@color/gray"
                android:textSize="@dimen/small" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/shadow"
                android:background="@color/gray"></View>

            <TextView
                android:id="@+id/txt_focused"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text=""
                android:lineSpacingMultiplier="1.1"
                android:textColor="@color/gray"
                android:textSize="@dimen/small" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin"></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/background_layout_div"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/view_me"
                    android:paddingBottom="@dimen/padding_top"
                    android:paddingTop="@dimen/padding_top">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_read" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="简介"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_message"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:ellipsize="end"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:singleLine="true"
                        android:text=""
                        android:textColorHint="@color/txt_color"
                        android:textSize="@dimen/normal"
                        android:typeface="sans" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    style="@style/view_me"
                    android:paddingBottom="@dimen/padding_top"
                    android:paddingTop="@dimen/padding_top">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_business" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="行业"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_vocation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text=""
                        android:textSize="@dimen/normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    style="@style/view_me"
                    android:paddingBottom="@dimen/padding_top"
                    android:paddingTop="@dimen/padding_top">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_area" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="区域"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_area"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text=""
                        android:textSize="@dimen/normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    style="@style/view_me"
                    android:paddingBottom="@dimen/padding_top"
                    android:paddingTop="@dimen/padding_top">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_position" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="职位"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_position"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"

                        android:text=""
                        android:textColorHint="@color/txt_color"
                        android:textSize="@dimen/normal" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    style="@style/view_me"
                    android:paddingBottom="@dimen/padding_top"
                    android:paddingTop="@dimen/padding_top">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_company" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.2"
                        android:text="公司"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:id="@+id/txt_company"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.7"
                        android:gravity="center|right"
                        android:paddingRight="@dimen/margin"
                        android:text=""
                        android:textColorHint="@color/txt_color"
                        android:textSize="@dimen/normal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:background="@drawable/background_layout_div"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lv_question"
                    style="@style/view_me"
                    android:paddingBottom="@dimen/padding_top"
                    android:paddingTop="@dimen/padding_top">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_question" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="我的问题"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    android:id="@+id/lv_answer"
                    style="@style/view_me"
                    android:paddingBottom="@dimen/padding_top"
                    android:paddingTop="@dimen/padding_top">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_answer" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="我的回答"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    android:id="@+id/lv_focus"
                    style="@style/view_me"
                    android:paddingBottom="@dimen/padding_top"
                    android:paddingTop="@dimen/padding_top">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_attention" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="我的关注"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/height"
                    android:alpha="0.15"
                    android:background="@color/txt_color"></View>

                <LinearLayout
                    android:id="@+id/lv_save"
                    style="@style/view_me"
                    android:paddingBottom="@dimen/padding_top"
                    android:paddingTop="@dimen/padding_top">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_collect" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="0.3"
                        android:text="我的收藏"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/normal" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:drawableRight="@drawable/icon_npg"
                        android:paddingRight="@dimen/margin" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lv_set"
                style="@style/view_me"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:background="@drawable/background_layout_div"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding_top"
                android:paddingLeft="@dimen/margin"
                android:paddingRight="@dimen/padding"
                android:paddingTop="@dimen/padding_top">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_set" />
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_weight="0.3"
                    android:text="设置"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:drawableRight="@drawable/icon_npg"
                    android:paddingRight="@dimen/padding" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>