<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/lv_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_height"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/banner"
            android:src="@drawable/demo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:id="@+id/re_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:padding="@dimen/margin"
            android:weightSum="1">
            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/btn_back_white"
                android:drawablePadding="@dimen/margin"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />
            <TextView
                android:id="@+id/btn_add_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/btn_share_white"
                android:gravity="center_horizontal"
                android:paddingRight="@dimen/padding_left"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/margin_small"
            android:paddingTop="@dimen/margin_small"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:background="#7d000000"
            android:weightSum="1">
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="倒计时:2017-2-04"
                android:textColor="@color/white"
                android:textSize="@dimen/normal" />
            <TextView
                android:id="@+id/txt_focus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/txt_shape_login"
                android:text="预约"
                android:textColor="@color/white"
                android:textSize="@dimen/mini" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:checkedButton="@+id/radio1"
            android:orientation="horizontal"
            android:background="@color/white"
            android:weightSum="1">
            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:button="@null"
                android:drawablePadding="@dimen/padding"
                android:drawableBottom="@drawable/selector_btn_line"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingTop="@dimen/margin"
                android:text="主讲"
                android:textColor="@drawable/selector_btn_top"
                android:textSize="@dimen/normal" />
            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.5"
                android:button="@null"
                android:drawablePadding="@dimen/padding"
                android:drawableBottom="@drawable/selector_btn_line"
                android:gravity="center"
                android:onClick="onClick"
                android:typeface="sans"
                android:paddingTop="@dimen/margin"
                android:text="互动"
                android:textColor="@drawable/selector_btn_top"
                android:textSize="@dimen/normal" />
        </RadioGroup>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.15"
            android:background="@color/txt_color"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="200"
            android:padding="@dimen/margin"
            android:drawableLeft="@drawable/people"
            android:textColor="@color/login"
            android:textSize="@dimen/mini"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"></View>
    <android.support.v4.view.ViewPager
        android:id="@+id/live_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></android.support.v4.view.ViewPager>
</LinearLayout>